<h1>Edit Article</h1>
{{#each articles}}
<form action="/articles/{{title}}?_method=PUT" method="post">
  <form action="/" method="put">
    <label>Title</label>
    <br>
    <input name="name" value="{{title}}" type="text">
    <br>
    <br>
    <label>Author</label>
    <br>
    <input name="price" value="{{author}}" type="text">
    <br>
    <br>
    <label>Content</label>
    <br>
    <input name="inventory" value="{{content}}" type="text">
    <br>
    <br>
    <button type="submit">Update Item</button>
    <br>
  </form>
  <form action="/articles/{{title}}?_method=DELETE" method="post">
    <button type="submit">Delete Item</button>
  </form>
{{/each}}
  <form action="/articles" method="get">
    <button type="submit">Cancel</button>
  </form>